#include <stdio.h>
#include <math.h>

float f(float x){
    return x*x*x - x - 11;
}

int main(){
    float a, b, x, prev_x;
    float c = 0.0001;
    int i = 0;

    printf("Enter a and b: ");
    scanf("%f %f", &a, &b);

    if (f(a) * f(b) >= 0){
        printf("Invalid interval\n");
        return 1;
    }

    printf("a\t\tb\t\tx\t\tf(x)\n");

    prev_x = a;

    do {
        x = (a*f(b) - b*f(a)) / (f(b) - f(a));
        printf("%.4f\t%.4f\t%.4f\t%.4f\n", a, b, x, f(x));

        if (fabs(x - prev_x) < c)
            break;

        prev_x = x;

        if (f(x) * f(a) < 0)
            b = x;
        else
            a = x;

    } while (1);

    printf("\nApprox Root (correct to 4 decimals) = %.4f\n", x);
    return 0;
}
