#include<stdio.h>
#include<math.h>

float f(float x){
    return x*x*x-x - 11;
}

int main(){
    float a,b,x,prev_x;
    float c=0.0001;
    int i=0;

    printf("enter a and b= ");
    scanf("%f %f", &a ,&b);
    if(f(a)*f(b)>=0){
        printf("Invalid interval\n");
        
    }
    printf("root b/w a and b\n");
        prev_x=a;

    do{
        x=(a*f(b) - b*f(a)) / (f(b)-f(a));
        printf("a=%.4f  b=%.4f  x=%.4f f(x)=%.4f\n",a,b,x,f(x));

        if(f(x)==c) break;
            
        if (f(x)*f(a)<0) b=x;
           
        else 
         a=x;
          
        
        if(fabs(x-prev_x)<c) break;
        prev_x=x;
        i++;
        
    }
    while(i<100);
    printf("\nApprox Root(Correct upto 4 decimal process)= %4f\n",x);
    return 0;
}
